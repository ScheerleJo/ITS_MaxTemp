<Window x:Class="ITS_MaxTemp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Max Temp"
        Width="1100"
        Height="650"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="{DynamicResource ApplicationPageBackgroundThemeBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,0,8">

            <TextBlock Text="Max Temp" 
                       Style="{StaticResource HeaderTextBlockStyle}" 
                       Margin="0,0,0,28"/>

            <TextBlock Text="Sensor auswählen" 
                       Margin="0,0,0,4"/>
            <ComboBox Margin="0,4,0,20" 
                      MinHeight="32" 
                      MinWidth="320">
                <ComboBoxItem Content="Sensor 1"/>
                <ComboBoxItem Content="Sensor 2"/>
            </ComboBox>

            <TextBlock Text="Geladene Datei:" 
                       FontSize="12" 
                       Foreground="{DynamicResource TextFillColorTertiaryBrush}" 
                       Margin="0,0,0,8"/>
            <TextBlock Text="temps.csv" 
                       FontSize="12" 
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>
            
            <Button Content="Datei hochladen" 
                    MinHeight="36" 
                    MinWidth="320"/>


        </StackPanel>
    </Grid>
</Window>
