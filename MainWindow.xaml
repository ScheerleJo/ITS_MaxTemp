<Window x:Class="ITS_MaxTemp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Max Temp"
        Width="1100"
        Height="650"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="{DynamicResource ApplicationPageBackgroundThemeBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,0,8">

            <TextBlock Text="Max Temp" 
                       Style="{StaticResource HeaderTextBlockStyle}" 
                       Margin="0,0,0,28"/>

            <TextBlock Text="Sensor auswählen" 
                       Margin="0,0,0,4"/>
            <ComboBox x:Name="SensorComboBox"
                      Margin="0,4,0,20" 
                      MinHeight="32" 
                      MinWidth="320"
                      SelectedIndex="0">
                <ComboBoxItem Content="Zuerst Daten importieren..." IsEnabled="False" IsSelected="True"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Von"
                               Margin="0,0,0,4"/>
                    <DatePicker x:Name="FromDatePicker"
                                Margin="0,4,0,0"
                                MinHeight="32"
                                MinWidth="154"
                                IsTodayHighlighted="True"/>
                </StackPanel>

                <StackPanel Margin="12,0,0,0">
                    <TextBlock Text="Bis"
                               Margin="0,0,0,4"/>
                    <DatePicker x:Name="ToDatePicker"
                                Margin="0,4,0,0"
                                MinHeight="32"
                                MinWidth="154"
                                IsTodayHighlighted="True"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Filter zurücksetzen"
                    Click="ClearFilter_Click"
                    MinHeight="32"
                    MinWidth="320"
                    Margin="0,0,0,12"/>

            <Button Content="Daten auswerten"
                    Click="EvaluateDataClick"
                    Style="{StaticResource AccentButtonStyle}"
                    MinHeight="36"
                    MinWidth="320"
                    Margin="0,0,0,28"/>

            <TextBlock Text="Geladene Datei:" 
                       FontSize="12" 
                       Foreground="{DynamicResource TextFillColorTertiaryBrush}" 
                       Margin="0,0,0,8"/>
            <TextBlock Text="temps.csv" 
                       FontSize="12" 
                       FontWeight="Bold"
                       Margin="0,0,0,12"
                       x:Name="FilePath"/>
            
            <Button Content="Datei hochladen" 
                    MinHeight="36" 
                    MinWidth="320"
                    Click="UploadFile_Click"/>


        </StackPanel>
        
        <StackPanel Grid.Column="2" Margin="0,0,0,8">

            <!-- Kopfbereich -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Überschrift -->
                <TextBlock Text="Auswertung"
                    VerticalAlignment="Center"
                    FontSize="16"/>

                
            
            </Grid>

            <!-- Beschriftung -->
            <TextBlock Grid.Row="2"
                Text="Maximale Temperatur:"
                Margin="0,40,0,20"
                FontSize="14"/>

            <!-- Hauptanzeige -->
            <StackPanel Grid.Row="3"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">

                <TextBlock x:Name="TemperatureTextBlock"
                    Text="47,3 °C"
                    FontSize="96"
                    FontWeight="Light"
                    HorizontalAlignment="Center"/>

                <TextBlock x:Name="DateTextBlock"
                    Text="gemessen am 04.02.2026 14:30"
                    FontSize="20"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center" />

            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
