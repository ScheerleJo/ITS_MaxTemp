<Window x:Class="ITS_MaxTemp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Temperatur Messung"
        Height="450"
        Width="800"
        Background="#F0F2F5">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- SCHWEBENDES FENSTER RECHTS -->
		<Border Grid.Column="1"
                Margin="30"
                Padding="25"
                Background="White"
                CornerRadius="12">

			<!-- Schatten -->
			<Border.Effect>
				<DropShadowEffect Color="Black"
                                  BlurRadius="20"
                                  ShadowDepth="4"
                                  Opacity="0.2"/>
			</Border.Effect>

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<!-- HEADER -->
				<Grid Grid.Row="0"
                      Margin="0,0,0,20">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<!-- Titel -->
					<TextBlock Text="Auswertung"
                               FontSize="20"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

					<!-- Buttons -->
					<StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

						<Button Content="Maximale Temperatur"
                                Margin="0,0,10,0"
                                Padding="14,6"
                                Background="#1E90FF"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>

						<Button Content="Diagramm anzeigen"
                                Padding="14,6"
                                Background="#E6E6E6"
                                Foreground="Black"
                                BorderThickness="0"
                                Cursor="Hand"/>
					</StackPanel>
				</Grid>

				<!-- INHALT -->
				<StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

					<TextBlock Text="Auswertung:"
                               FontSize="14"
                               Foreground="Gray"
                               Margin="0,0,0,15"/>

					<TextBlock Text="23.5 °C"
                               FontSize="72"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

					<TextBlock Text="01.02.2026 – 14:32"
                               FontSize="16"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
				</StackPanel>
			</Grid>
		</Border>
	</Grid>
</Window>


